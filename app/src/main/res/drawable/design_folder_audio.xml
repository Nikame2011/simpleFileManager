<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/folder_default"/>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/folder_open"/>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/folder_open"/>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:drawable="@drawable/folder_default"/>
            <item android:drawable="@drawable/audio"/>
        </layer-list>
    </item>

</selector>