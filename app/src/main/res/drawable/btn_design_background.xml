<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#b3b3b3" />
                </shape>
            </item>
            <item android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#bebebe" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#bebebe" />
                </shape>
            </item>
            <item android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#b3b3b3" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#bebebe" />
                </shape>
            </item>
            <item android:top="3dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#b3b3b3" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#bebebe" />
                </shape>
            </item>
            <item android:bottom="3dp" android:end="1dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>